- var prefix = (process.env.NODE_ENV == 'production') ? '' : process.env.NODE_ENV
- var loginUrl = 'https://' + prefix + 'app.meetniq.org/login'

doctype html

html(lang='en')

  head
    meta(charset='utf-8')
    meta(name='description', content='')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    block seo

    link(rel='shortcut icon', href='images/meetniq-favicon-v1.ico')

    // Spacing comment to stop css bundling clobbering favicon when building

    <!-- build:css styles/vendor.css -->
    <!-- bower:css -->
    link(rel='stylesheet', href='/bower_components/magnific-popup/dist/magnific-popup.css')
    <!-- endbower -->
    <!-- endbuild -->

    // build:css styles/main.css
    link(rel='stylesheet', href='styles/main.css')
    // endbuild

    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  body

    // NAVBAR
    // ==================================================

    .navbar.navbar-static-top
      .container
        .row
          .col-xs-12.col-sm-6
            .navbar-brand-small
              span(class='navbar-brand navbar-brand-small')
                a(href='/')
                  img(src='images/meetniq-logo-white-v1p.svg', alt='An image of the Meetniq logo'
                      style="height: 77px; width: 80px;")
          .col-xs-12.col-sm-6
            .pull-right.small-margin
              a(class="btn btn-transparent", href='https://app.meetniq.org/sign-up')
                | Sign up
              a(class="btn btn-transparent", href=loginUrl)
                | Sign in


    // CONTENT
    // ==================================================
    block content

    // FOOTER
    // ==================================================
    .footer
      .container
        .row
          .col-sm-6.footer-column
            .col-md-6.footer-column
              p(class='lead') Contact / connect
              p
                i(class="fa fa-envelope-o fa-fw")
                | &nbsp;&nbsp;
                a(href='mailto:mail@meetniq.org') Email
              p
                i(class="fa fa-twitter fa-fw")
                | &nbsp;&nbsp;
                a(href='https://twitter.com/meetniq', target='_blank') Twitter

            .col-md-6.footer-column
              p(class='lead') Policies
              p
                i(class="fa fa-file-text fa-fw")
                | &nbsp;&nbsp;
                a(href='terms') Terms
              p
                i(class="fa fa-key fa-fw")
                | &nbsp;&nbsp;
                a(href='privacy') Privacy
              p
                i(class="fa fa-lock fa-fw")
                | &nbsp;&nbsp;
                a(href='gdpr') GDPR


          .col-sm-6.footer-column
            .col-md-6.footer-column
              p(class='lead') About Meetniq
              p
                i(class="fa fa-bookmark fa-fw")
                | &nbsp;&nbsp;
                a(href='features') Features
              p
                i(class="fa fa-star fa-fw")
                | &nbsp;&nbsp;
                a(href='project') The Meetniq project

            .col-md-6.footer-column
              p(class='lead') Pricing plans
              p
                i(class="fa fa-th-large fa-fw")
                | &nbsp;&nbsp;
                a(href='pricing') Pricing
              p
                i(class="fa fa-certificate fa-fw")
                | &nbsp;&nbsp;
                a(href='https://meetniq.com') Meetniq for business


    // ==================================================

    <!-- build:js scripts/vendor.js -->
    <!-- bower:js -->
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/bower_components/magnific-popup/dist/jquery.magnific-popup.js')
    <!-- endbower -->
    <!-- endbuild -->

    script(type='text/javascript')
      | var bootstrapButton = $.fn.button.noConflict()
      | $.fn.bootstrapBtn = bootstrapButton

    script(type='text/javascript')
      | $('.carousel').carousel({
      |   interval: 7000
      | });

    script(type='text/javascript')
      | $('.popup-image').magnificPopup({
      |   type: 'image',
      |   image: {
      |     cursor: 'mfp-zoom-out-cur',
      |   },
      |   closeOnContentClick: true,
      | });

    block extrajs
