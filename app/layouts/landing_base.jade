doctype html

html(lang='en')

  head
    meta(charset='utf-8')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    block seo

    link(rel='shortcut icon' href='images/econvenor-favicon-v1.ico')

    // build:css styles/vendor.css
    // bower:css
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/bower_components/fontawesome/css/font-awesome.css')
    link(rel='stylesheet', href='/bower_components/magnific-popup/dist/magnific-popup.css')
    // endbower
    // endbuild

    // build:css styles/main.css
    link(rel='stylesheet', href='styles/main.css')
    // endbuild

    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  body

    // NAVBAR
    // ==================================================
      
    .navbar.navbar-fixed-top
      .container
        span(class='navbar-brand')
            a(href='index.html')
              img(src='images/econvenor-logo-v1l.png', width='200', height='45', alt='An image of the eConvenor logo')

        .pull-right
          a(href='qualify/step0')
            button(type="button" class="btn btn-primary") Sign up
          a(href='login')
            button(type="button" class="btn btn-primary") Sign in

    // RIBBON
    // ==================================================
    .ribbon
      .container
        .message-container
          i(class="fa fa-map-marker fa-lg")
          &nbsp;&nbsp; Are you in Melbourne, Australia? Come and 
          a(href='hack') hack on eConvenor with us
          on Saturday 14th March 2015!
    
    // CONTENT
    // ==================================================
    block content

    // FOOTER
    // ==================================================
    .footer
      .container
        .row
          .col-xs-3.col-xs-offset-2
            p(class='lead') More information
            p
              a(href='questions') Common questions
            p
              a(href='terms') Terms and conditions
          
          .col-xs-3
            p(class='lead') About eConvenor
            p
              a(href='project') The eConvenor project
            p
              a(href='contact') How to contact us
            p
              a(href='source') Source code

          .col-xs-3
            p(class='lead') Contribute
            p
              a(href='volunteer') Work on eConvenor
            p
              a(href='hack.html') Monthly hack day
            p
              a(href='donate') Donate money
            p
              a(href='pricing') Unions & political parties


    // JAVASCRIPT
    // ==================================================

    // build:js scripts/vendor.js
    // bower:js
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/bower_components/magnific-popup/dist/jquery.magnific-popup.js')
    // endbower
    // endbuild

    script(type='text/javascript')
      | var bootstrapButton = $.fn.button.noConflict()
      | $.fn.bootstrapBtn = bootstrapButton

    script(type='text/javascript')
      | $('.carousel').carousel({
      |   interval: 7000
      | });

    script(type='text/javascript')
      | $('.popup-image').magnificPopup({
      |   type: 'image',
      |   image: {
      |     cursor: 'mfp-zoom-out-cur',
      |   },
      |   closeOnContentClick: true,
      | });

    block extrajs
